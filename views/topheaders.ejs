

    <div id="wrapper">

        <div class="main_content">
    <header>
        <div class="header_inner">
            <div class="left-side">
                <!-- Logo -->
                <div id="logo" class=" uk-hidden@s">
                    <a href="home.html">
                        <img src="/assets/images/logo-mobile.png" alt="">
                        <img src="/assets/images/logo-mobile-light.png" class="logo_inverse">
                    </a>
                </div>

                <div class="triger" uk-toggle="target: #wrapper ; cls: sidebar-active">
                    <i class="uil-bars"></i>
                </div>
<!-- ===================== Search ========================= -->              

<form method="POST" action="/search">
    <div class="header_search flex  dark:border-gray-700">
        <input type="text" placeholder="Search.." id="searchInput" name="search" style="width: 250px;">
        <div class="flex h-full space-x-2">
            <button type="submit" class="bg-blue-600 font-semibold px-6 py-2 rounded-md text-white">Send</button>
        </div>
    </div>
</form>

<!-- ===================== Search End========================= -->
</div>

            <div class="right-side lg:pr-4">
                 <!-- upload -->
                <a href="#profile-modal"
                    class="bg-pink-500 flex font-bold hidden hover:bg-pink-600 hover:text-white inline-block items-center lg:block max-h-10 mr-4 px-4 py-2 rounded shado text-white">
                    <ion-icon name="add-circle" class="-mb-1
                     mr-1 opacity-90 text-xl uilus-circle"></ion-icon> Upload
                </a>

                 <!-- upload dropdown box -->
                <div id="profile-modal" uk-dropdown="pos: top-right;mode:click ; animation: uk-animation-slide-bottom-small" class="header_dropdown">

                    <!-- notivication header -->
                    <div class="px-4 py-3 -mx-5 -mt-4 mb-5 border-b">
                        <h4>Upload Post</h4>
                    </div>

                    <!-- notification contents -->
                    <div class="flex justify-center flex-center text-center dark:text-gray-300">

                        <form action="/feed" enctype="multipart/form-data" method="POST" class="p-5" > 
                            <input type="file" name="myFile"  class="py-5"/>
                            <input type="submit" value="Upload a file"  class="pt-5" style="margin-top: 20px!important;"/>
                         </form> 


                    </div>
                    <div class="px-4 py-3 -mx-5 -mb-4 mt-5 border-t text-sm dark:border-gray-500 dark:text-gray-500">
                        Your Video size Must be Maxmium 999MB
                    </div>
                </div>

                 <!-- Notification -->

               
                <a href="#" class="header-links-item">
                    <span class="inline-flex items-center px-3 py-2 ml-1 text-xs font-large bg-blue-700 rounded-full text-white"><%=total_notification%></span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                
                    </svg>
                </a>
                
                <div uk-drop="mode: click;offset: 4" class="header_dropdown">
                    <h4
                        class="-mt-5 -mx-5 bg-gradient-to-t from-gray-100 to-gray-50 border-b font-bold px-6 py-3">
                        Notification </h4>
                    <ul class="dropdown_scrollbar" data-simplebar>

                        <% get_request_ids.forEach(function(item,index) { %> 
                 
                          
                        <li class="mb-3">
                            <a>
                            <div class="drop_avatar"> <img src="/images/<%=item.profile_pic%>" alt="">
                            </div>
                            <div class="drop_content flex">
                                <p> <strong><%=item.firstname +" " + item.lastname%></strong>   requested to follow you 
                                    <span class="time-ago"> 2 hours ago </span> </p>

                                </div>
                                <div class="flex justify-center">
                                    <a href="/accept_request/<%= item._id %>" class="btn btn-xs mr-2" style="font-size: 13px;  padding: 2px 6px; background-color: blue; color: white;" >Confirm</a>
                                    <a href="/delete_request/<%= item._id %>"  class="btn btn-xs" style="font-size: 13px;  padding: 2px 6px;">Delete</a>
                                   </div>
                        </a>
                      
                        </li>
                        <%});%>
                    </ul>
                    <a href="#" class="see-all">See all</a>
                </div>

                <!-- Messages -->

                <a href="#" class="header-links-item">
                    <span class="inline-flex items-center px-3 py-2 ml-1 text-xs font-large bg-red-500 rounded-full text-white"><%=total_messages%></span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                </a>
                 <div uk-drop="mode: click;offset: 4" class="header_dropdown"> 
                    <h4
                        class="-mt-5 -mx-5 bg-gradient-to-t from-gray-100 to-gray-50 border-b font-bold px-6 py-3">
                        Messages </h4>
                    <ul class="dropdown_scrollbar" data-simplebar>
                        <%newMessages.forEach(item => { %> 
                        <li>
                            <a href="#">
                                <div class="drop_avatar"> <img src="/images/<%=item.sender_profilepic%>" alt="">
                                </div>
                                <div class="drop_content">
                                    <strong> <%=item.sender_name%> </strong> <time> 6:43 PM</time>
                                    <p><%=item.msg%>  </p>
                                </div>
                            </a>
                        </li>
                        <% })%>
                    </ul>
                 
                </div> 

                <!-- profile -->

                <a href="#">
                    <img src="/images/<%= data.profile_pic %>" class="header-avatar" alt="">
                </a>
                <div uk-drop="mode: click;offset:9" class="header_dropdown profile_dropdown border-t">
                    <ul>
                        <li><a href="/setting"> Account setting </a> </li>
                                              <li><a href="/logout"> Log Out</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </header>
</div>

 
  
  
  
  
  